<h4><strong> <%= product.name %>Â </strong> </h4>
<div data-ride="carousel" data-interval="false" class="carousel slide" id="<%= product.id %>">
    <div role="listbox" class="carousel-inner">

        <% if(product.images.length > 0) {%>
        <div class="item active">
            <img src="<%= product.images[0] %>" alt="Slide Image" class="img-responsive product-carousel-img" />
        </div>
        <% for(var i=1; i<product.images.length; i++) {%>
        <div class="item">
            <img src="<%= product.images[i] %>" alt="Slide Image" class="img-responsive" />
        </div>
        <% } %>
        <% } %>
    </div>
    <a class="left carousel-control" href="#<%= product.id %>" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#<%= product.id %>" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
    <ol class="carousel-indicators">
        <% if(product.images.length > 0) {%>
        <li data-target="#<%= product.id %>" data-slide-to="0" class="active"></li>
        <% for(var i=1; i<product.images.length; i++) {%>
        <li data-target="#<%= product.id %>" data-slide-to="<%= i %>"></li>
        <% } %>
        <% } %>
    </ol>
</div>
<p class="text-justify"><%= product.description %></p>
<strong><%= product.price %></strong>